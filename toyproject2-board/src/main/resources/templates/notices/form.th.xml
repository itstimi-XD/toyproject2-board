<?xml version="1.0"?>
<thlogic>
  <attr sel="#header" th:replace="header :: header" />
  <attr sel="#footer" th:replace="footer :: footer" />

  <attr sel="#notice-form-header/h1" th:text="${formStatus} ? '게시글 ' + ${formStatus.description} : _" />

  <attr sel="#notice-form" th:action="${formStatus?.update} ? '/notices/' + ${notice.id} + '/form' : '/notices/form'" th:method="post">
    <attr sel="#title" th:value="${notice?.title} ?: _" />
    <attr sel="#content" th:text="${notice?.content} ?: _" />
    <attr sel="#hashtag" th:value="${notice?.hashtag} ?: _" />
    <attr sel="#submit-button" th:text="${formStatus?.description} ?: _" />
    <attr sel="#cancel-button" th:onclick="'history.back()'" />
  </attr>
</thlogic>
