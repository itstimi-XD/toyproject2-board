<?xml version="1.0"?>
<thlogic>
  <attr sel="#header" th:replace="header :: header" />
  <attr sel="#footer" th:replace="footer :: footer" />

  <attr sel="main" th:object="${notices}">
    <attr sel="#hashtags" th:remove="all-but-first">
      <attr sel="div" th:each="hashtag : ${hashtags}">
        <attr sel="a" th:class="'text-reset'" th:text="${hashtag}" th:href="@{/notices/search-hashtag(
            page=${param.page},
            sort=${param.sort},
            searchType=${searchType.name},
            searchValue=${hashtag}
        )}" />
      </attr>
    </attr>

    <attr sel="#notice-table">
      <attr sel="thead/tr">
        <attr sel="th.title/a" th:text="'제목'" th:href="@{/notices/search-hashtag(
            page=${notices.number},
            sort='title' + (*{sort.getOrderFor('title')} != null ? (*{sort.getOrderFor('title').direction.name} != 'DESC' ? ',desc' : '') : ''),
            searchType=${searchType.name},
            searchValue=${param.searchValue}
        )}"/>
        <attr sel="th.content/a" th:text="'본문'" th:href="@{/notices/search-hashtag(
            page=${notices.number},
            sort='content' + (*{sort.getOrderFor('content')} != null ? (*{sort.getOrderFor('content').direction.name} != 'DESC' ? ',desc' : '') : ''),
            searchType=${searchType.name},
            searchValue=${param.searchValue}
        )}"/>
        <attr sel="th.user-id/a" th:text="'작성자'" th:href="@{/notices/search-hashtag(
            page=${notices.number},
            sort='userAccount.userId' + (*{sort.getOrderFor('userAccount.userId')} != null ? (*{sort.getOrderFor('userAccount.userId').direction.name} != 'DESC' ? ',desc' : '') : ''),
            searchType=${searchType.name},
            searchValue=${param.searchValue}
        )}"/>
        <attr sel="th.created-at/a" th:text="'작성일'" th:href="@{/notices/search-hashtag(
            page=${notices.number},
            sort='createdAt' + (*{sort.getOrderFor('createdAt')} != null ? (*{sort.getOrderFor('createdAt').direction.name} != 'DESC' ? ',desc' : '') : ''),
            searchType=${searchType.name},
            searchValue=${param.searchValue}
        )}"/>
      </attr>
      <attr sel="tbody" th:remove="all-but-first">
        <attr sel="tr[0]" th:each="notice : ${notices}">
          <attr sel="td.title/a" th:text="${notice.title}" th:href="@{'/notices/' + ${notice.id}}" />
          <attr sel="td.content/span" th:text="${notice.content}" />
          <attr sel="td.user-id" th:text="${notice.nickname}" />
          <attr sel="td.created-at/time" th:datetime="${notice.createdAt}" th:text="${#temporals.format(notice.createdAt, 'yyyy-MM-dd')}" />
        </attr>
      </attr>
    </attr>

    <attr sel="#pagination">
      <attr sel="ul">
        <attr sel="li[0]/a"
              th:text="'previous'"
              th:href="@{/templates/notices(page=${notices.number - 1}, searchType=${searchType.name}, searchValue=${param.searchValue})}"
              th:class="'page-link' + (${notices.number} <= 0 ? ' disabled' : '')"
        />
        <attr sel="li[1]" th:class="page-item" th:each="pageNumber : ${paginationBarNumbers}">
          <attr sel="a"
                th:text="${pageNumber + 1}"
                th:href="@{/templates/notices(page=${pageNumber}, searchType=${searchType.name}, searchValue=${param.searchValue})}"
                th:class="'page-link' + (${pageNumber} == ${notices.number} ? ' disabled' : '')"
          />
        </attr>
        <attr sel="li[2]/a"
              th:text="'next'"
              th:href="@{/templates/notices(page=${notices.number + 1}, searchType=${searchType.name}, searchValue=${param.searchValue})}"
              th:class="'page-link' + (${notices.number} >= ${notices.totalPages - 1} ? ' disabled' : '')"
        />
      </attr>
    </attr>
  </attr>
</thlogic>
